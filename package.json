{
  "name": "ohbarye.me",
  "version": "1.0.0",
  "description": "ohbarye's profile",
  "main": "index.js",
  "scripts": {
    "start": "webpack --watch",
    "build": "webpack && yarn build-cv-ja && yarn build-cv-en",
    "build-cv-ja": "pandoc -f markdown -t html --template=./.pandoc/templates/cv-template.html --toc --toc-depth=2 ./cv-ja/cv-ja.md > ./cv-ja/index.html",
    "build-cv-en": "pandoc -f markdown -t html --template=./.pandoc/templates/cv-template.html --toc --toc-depth=2 ./cv-en/cv-en.md > ./cv-en/index.html",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --fix --project tsconfig.json",
    "precommit": "lint-staged",
    "prepush": "yarn lint",
    "pretty": "prettier --write 'src/javascripts/**/*.ts'"
  },
  "repository": {
    "url": "git@github.com:ohbarye/me.git",
    "type": "git"
  },
  "author": "ohbarye <over.rye@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "awesome-typescript-loader": "^3.5.0",
    "css-loader": "^0.28.11",
    "lint-staged": "^10.2.6",
    "node-sass": "^4.7.2",
    "prettier": "^1.11.1",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.20.3",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-config-prettier": "^1.9.0",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0"
  },
  "lint-staged": {
    "src/javascripts/**/*.ts": [
      "yarn pretty",
      "git add"
    ]
  }
}
